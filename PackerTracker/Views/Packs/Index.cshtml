@using PackerTracker.Models;


<h1>Packer tracker list</h1>
@if ( Model.Count == 0)
{
  <p>There are no items in your packing list.</p> 
}
<ul>
  @foreach ( Pack item in Model)
  {
    <li><a href="/packs/@item.Id">@item.ItemName , @item.Price , @item.Weight</a></li>
  }
</ul>

<a href="/packs/new">Add a new item.</a>

<form action="/packs/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>

